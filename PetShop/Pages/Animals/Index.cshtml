@page
@model PetShop.Pages.Animals.IndexModel

@using Microsoft.AspNetCore.Mvc.Rendering

@{
    // Sets the browser tab title
    ViewData["Title"] = "Available Animals";
}

<h1 class="mb-4 text-center">Available Animals</h1>

@* 
    FILTER SECTION
*@
<div class="container mb-4">
    <form method="get">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <label class="form-label fw-semibold" for="SelectedCategoryId">
                    Filter by Species
                </label>

                @*
                    The first option is "All Species" with an empty value.
                *@
                <select asp-for="SelectedCategoryId"
                        asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name"))"
                        class="form-select">
                    <option value="">All Species</option>
                </select>
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary w-100">
                    Apply Filter
                </button>
            </div>
        </div>
    </form>
</div>

@* 
    ANIMAL CARDS GRID
*@
<div class="container">
    <div class="row g-4">

        @* If no animals match the current filter, show a message *@
        @if (!Model.Animals.Any())
        {
            <p class="text-center">No animals found for this filter.</p>
        }
        else
        {
            @* Loop through each animal and render a card *@
            @foreach (var animal in Model.Animals)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-sm">

                        @* Animal image with consistent size *@
                        <img class="card-img-top"
                             src="@animal.ImagePath"
                             alt="@animal.Name"
                             style="height: 200px; object-fit: cover;" />

                        <div class="card-body">
                            <h5 class="card-title">@animal.Name</h5>

                            <p class="card-text">
                                <strong>Species:</strong> @animal.Category?.Name <br />
                                <strong>Breed:</strong> @animal.Breed <br />

                                @* Price formatted explicitly as US dollars *@
                                <strong>Price:</strong>
                                @animal.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                            </p>

                            @* Button to go to the details page for this animal *@
                            <a asp-page="Details"
                               asp-route-id="@animal.AnimalId"
                               class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
