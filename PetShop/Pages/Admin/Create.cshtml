@page
@model PetShop.Pages.Admin.CreateModel

@{
    ViewData["Title"] = "Admin - Add Animal";
}

<h1 class="mb-4">Add New Animal</h1>

<form method="post" style="max-width: 700px;">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Animal.Name" class="form-label fw-semibold"></label>
        <input asp-for="Animal.Name" class="form-control" />
        <span asp-validation-for="Animal.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Species (Category)</label>
        <select asp-for="Animal.CategoryId" asp-items="Model.CategoryOptions" class="form-select">
            <option value="">Select a species</option>
        </select>
        <span asp-validation-for="Animal.CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Animal.Breed" class="form-label fw-semibold"></label>
        <input asp-for="Animal.Breed" class="form-control" />
        <span asp-validation-for="Animal.Breed" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Animal.Gender" class="form-label fw-semibold"></label>
        <input asp-for="Animal.Gender" class="form-control" />
        <span asp-validation-for="Animal.Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Animal.Age" class="form-label fw-semibold"></label>
        <input asp-for="Animal.Age" type="number" min="0" class="form-control" />
        <span asp-validation-for="Animal.Age" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Animal.Price" class="form-label fw-semibold"></label>
        <input asp-for="Animal.Price" type="number" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="Animal.Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Animal.Description" class="form-label fw-semibold"></label>
        <textarea asp-for="Animal.Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Animal.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Animal.ImagePath" class="form-label fw-semibold"></label>
        <input asp-for="Animal.ImagePath" class="form-control" placeholder="/images/bella.jpg" />
        <span asp-validation-for="Animal.ImagePath" class="text-danger"></span>
    </div>

    <div class="form-check mb-4">
        <input asp-for="Animal.IsAvailable" class="form-check-input" />
        <label asp-for="Animal.IsAvailable" class="form-check-label">Available for adoption?</label>
    </div>

    <button type="submit" class="btn btn-primary me-2">Save</button>
    <a asp-page="Admin" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
